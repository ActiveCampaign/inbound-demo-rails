<h1 class="page_title">ACME Blog Co.</h1>

<% @articles.each do |article| %>
<div class="article">
  <h2 class="article_title"><%= link_to article.title, article %></h2>
  <p class="article_extract"><%= strip_tags(article.body).truncate(220) %> <%= link_to 'Read more', article %></p>
</div>
<% end %>